<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="io.microshow.retrofitgo.sample">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="io.microshow.retrofitgo.sample.App"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name="io.microshow.retrofitgo.sample.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/LauncherTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="io.microshow.retrofitgo.sample.appbar.AppBarLayoutActivity"
            android:label="@string/app_name"
            android:theme="@style/SupportTheme">
        </activity>

        <activity
            android:name="io.microshow.retrofitgo.sample.appbar.AppBarLayoutActivity2"
            android:label="@string/app_name"
            android:theme="@style/SupportTheme">
        </activity>

    </application>

</manifest>